{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 40781,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "runtimeArgs": [
                "run",
                "test:watch"
            ],
            "name": "Run npm test",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "console":"integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "args": [
                "--openssl-legacy-provider",
                "--require",
                "coffeescript/register",
                "--timeout",
                "20000",
                "--colors",
                "--reporter",
                "progress",
                "--reporter-option",
                "output=report.json",
                "${workspaceFolder}/test/test.coffee"
            ],
            "console":"integratedTerminal",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture":"std" 
        },
        {
            "args": [
                "-v"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "type": "node",
            "request": "launch",
            "name": "Check Node Version",
            "console":"integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": ""
        }
    ]
}